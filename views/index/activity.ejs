<!-- views/index/albums.ejs -->
<!doctype html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
    <div class="container">
			<header>
				<% include ../partials/index-header %>

				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div>
							<ul class="nav navbar-nav">
								<li><a href="/">Photostream</a></li>
								<li><a href="/albums">Albums</a></li>
								<li><a href="/tags">Tags</a></li>
								<li class="active"><a href="/activity">Activity</a></li>
							</ul>
						</div>
					</div>
				</nav>
			</header>

      <!-- Emails of users with the most contribution -->
    	<% if (typeof users != 'undefined' && users.length > 0) { %>
    			<% for(var i = 0; i < users.length; i++) { %>
    				<ul>
    					<li><%= users[i].email %>, Photos: <%= users[i].num_photos %>, Comments: <%= users[i].num_comments %></li>
    				</ul>
    			<% } %>
    	<% } %>

    </div>
</body>
</html>
