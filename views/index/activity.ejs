<!-- views/index/albums.ejs -->
<!doctype html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
    <div class="container">

			<nav class="navbar navbar-default">
				<div class="container-fluid">
					<div class="navbar-header">
						<a class="navbar-brand" href="/">Flicks</a>
					</div>
					<div>
						<% if (typeof user == 'undefined') { %>
							<ul class="nav navbar-nav">
								<li><a href="/login">Login</a></li>
								<li><a href="/signup">Signup</a></li>
							</ul>
						<% } else { %>
							<ul class="nav navbar-nav">
								<li><a href="/upload">Upload</a></li>
								<li><a href="/friends">Friends</a></li>
								<li><a href="/profile/photos">Profile</a></li>
								<li><a href="/logout">Logout</a></li>
							</ul>
							<p class="navbar-text navbar-right">Signed in as <a href="#" class="navbar-link"><%= user.email %></a></p>
						<% }%>
					</div>
				</div>
			</nav>

      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div>
            <ul class="nav navbar-nav">
              <li><a href="/">Photostream</a></li>
              <li><a href="/albums">Albums</a></li>
							<li><a href="/tags">Tags</a></li>
              <li class="active"><a href="/activity">Activity</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Emails of users with the most contribution -->
    	<% if (typeof users != 'undefined' && users.length > 0) { %>
    			<% for(var i = 0; i < users.length; i++) { %>
    				<ul>
    					<li><%= users[i].email %>, Photos: <%= users[i].num_photos %>, Comments: <%= users[i].num_comments %></li>
    				</ul>
    			<% } %>
    	<% } %>

    </div>
</body>
</html>
