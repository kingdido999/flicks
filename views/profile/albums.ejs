<!-- views/profile/albums.ejs -->
<!doctype html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
<div class="container">

	<header>
		<% include ../partials/profile-header %>

		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div>
					<ul class="nav navbar-nav">
						<li><a href="/profile/photos">Photostream</a></li>
						<li class="active"><a href="/profile/albums">Albums</a></li>
						<li><a href="/profile/tags">Tags</a></li>
						<li><a href="/profile/explore">Explore</a></li>
						<li><a href="/profile/settings">Settings</a></li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- Albums -->
	<% if (typeof albums != 'undefined' && albums.length > 0) { %>
			<% for(var i = 0; i < albums.length; i++) { %>
				<ul>
					<li>
						<%= albums[i].name %>
						<!-- Delete button -->
						<form action="/deleteAlbum" method="post" class="album-delete">
							<input type="hidden" name="album_id" value="<%= albums[i].id %>">
							<input type="submit" value="Delete" class="btn btn-warning btn-xs">
						</form>
					</li>
				</ul>
			<% } %>
	<% } %>

</div>
</body>
</html>
