<!-- views/profile/explore.ejs -->
<!doctype html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
<div class="container">

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">Flicks</a>
			</div>
			<div>
				<ul class="nav navbar-nav">
					<li><a href="/upload">Upload</a></li>
					<li><a href="/friends">Friends</a></li>
					<li class="active"><a href="/profile/photos">Profile</a></li>
					<li><a href="/logout">Logout</a></li>
				</ul>
				<p class="navbar-text navbar-right">Signed in as <a href="#" class="navbar-link"><%= user.email %></a></p>
			</div>
		</div>
	</nav>

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div>
				<ul class="nav navbar-nav">
					<li><a href="/profile/photos">Photostream</a></li>
					<li><a href="/profile/albums">Albums</a></li>
					<li><a href="/profile/tags">Tags</a></li>
          <li class="active"><a href="/profile/explore">Explore</a></li>
					<li><a href="/profile/settings">Settings</a></li>
				</ul>
			</div>
		</div>
	</nav>

  <!-- Photostream -->
  <% if (typeof photos != 'undefined' && photos.length > 0) { %>
    <% for(var i = 0; i < photos.length; i++) { %>
    <div class="image-container">
      <div class="image-wrapper">
        <a href="/photo?id=<%= photos[i].id %>">
          <img src="<%= photos[i].path %>" />
        </a>
      </div>
    </div>

    <% } %>
  <% } %>

</div>
</body>
</html>
